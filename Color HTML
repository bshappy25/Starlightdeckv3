    <div class="panel">
      <div class="pill">
        <span>Color</span>
        <input id="color" type="color" value="#111111" />
      </div>

      <div class="pill">
        <span>Size</span>
        <input id="size" type="range" min="1" max="40" value="6" />
        <span id="sizeLabel">6</span>
      </div>

      <button id="clearBtn" type="button">Clear</button>
      <button id="saveBtn" type="button">Save PNG</button>
    </div>

    <div class="stage">
      <canvas id="c"></canvas>
